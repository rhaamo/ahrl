{% extends "layout.jinja2" %}

{% block content %}
<div class="row">
    <div class="col-lg-12">
        <h4>You can view the following logbooks</h4>
        <ul>
            {% for i in logbooks %}
                {% if i.logs.count() > 0 %}
                    <li><a href="{{ url_for('bp_qsos.logbook', username=i.name) }}">{{ i.name }} - {{ i.callsign }}</a></li>
                {% endif %}
            {% endfor %}
        </ul>
    </div>
</div>
{% endblock %}
