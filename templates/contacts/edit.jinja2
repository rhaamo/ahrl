{% extends "layout.jinja2" %}
{% import "bootstrap/wtf.html" as wtf %}

{% block content %}
<div class="row">
    <div class="row">
        <div class="col-lg-6">
            <h3>Edit contact: {{ contact.callsign }}</h3>
        </div>
    </div>

    <form action="{{ url_for('bp_contacts.edit', contact_id=contact.id) }}" method="POST" class="form-horizontal" name="gtfo-lastpass-search">
        {{ form.hidden_tag() }}
        {{ wtf.form_errors(form, hiddens=True) }}

        <div class="row">
            <div class="col-lg-6">
                {{ wtf.form_field(form.callsign, 'horizontal') }}
                {{ wtf.form_field(form.gridsquare, 'horizontal') }}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                {{ wtf.form_field(form.submit, button_map={'submit': 'success'}) }}
                <a class="btn btn-warning" href="{{ url_for('bp_contacts.contacts') }}">Cancel contact</a>
            </div>
        </div>
    </form>
</div>
{% endblock %}
