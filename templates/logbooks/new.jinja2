{% extends "layout.jinja2" %}
{% import "bootstrap/wtf.html" as wtf %}

{% block content %}
<div class="row">
    <div class="row">
        <div class="col-lg-6">
            <h3>New logbook</h3>
        </div>
    </div>

    <form action="{{ url_for('bp_logbooks.new') }}" method="POST" class="form-horizontal">
        {{ form.hidden_tag() }}
        {{ wtf.form_errors(form, hiddens=True) }}

        <div class="row">
            <div class="col-lg-6">
                {{ wtf.form_field(form.name, 'horizontal') }}
                {{ wtf.form_field(form.callsign, 'horizontal') }}
                {{ wtf.form_field(form.locator, 'horizontal') }}
                {{ wtf.form_field(form.swl, 'horizontal') }}
                {{ wtf.form_field(form.public, 'horizontal') }}
                {{ wtf.form_field(form.default, 'horizontal') }}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                {{ wtf.form_field(form.submit, button_map={'submit': 'success'}) }}
                <a class="btn btn-warning" href="{{ url_for('bp_logbooks.logbooks', user=current_user.name) }}">Cancel contact</a>
            </div>
        </div>
    </form>
</div>
{% endblock %}
