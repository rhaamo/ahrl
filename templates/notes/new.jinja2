{% extends "layout.jinja2" %}
{% import "bootstrap/wtf.html" as wtf %}

{% block content %}
<div class="row">
    <div class="row">
        <div class="col-lg-6">
            <h3>New note</h3>
        </div>
    </div>

    <form action="{{ url_for('bp_notes.new') }}" method="POST" class="form-horizontal">
        {{ form.hidden_tag() }}
        {{ wtf.form_errors(form, hiddens="only") }}

        <div class="row">
            <div class="col-lg-6">
                {{ wtf.form_field(form.title, 'horizontal') }}
                {{ wtf.form_field(form.cat, 'horizontal') }}
                {{ wtf.form_field(form.note, 'horizontal') }}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                {{ wtf.form_field(form.submit, button_map={'submit': 'success'}) }}
                <a class="btn btn-warning" href="{{ url_for('bp_notes.notes') }}">Cancel note</a>
            </div>
        </div>
    </form>
</div>
{% endblock %}
