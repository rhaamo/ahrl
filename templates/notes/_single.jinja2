<div class="row">
    <div class="col-lg-12 single-note">
        <div class="well small well-sm well-ultra-sm">
            <footer>
                <a href="{{ url_for('bp_notes.edit', note_id=note.id) }}" class="btn btn-primary btn-sm">edit</a>
                <a href="{{ url_for('bp_notes.delete', note_id=note.id) }}" class="btn btn-danger btn-sm delete_link">delete</a>

                <span class="label label-default">Category</span>
                {{ note.cat }}
                <span class="label label-default">Date</span>
                {{ note.timestamp | localize }}
                <span class="label label-default">Title</span>
                {{ note.title }}

            </footer>
        </div>
        <div class="summary">{{ note.note }}</div>
    </div>
</div>