{% extends "layout.jinja2" %}
{% import 'bootstrap/form.html' as bf4 %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <h3>Edit note: {{ note.title }} <a class="btn btn-sm btn-warning" href="{{ url_for('bp_notes.notes') }}">Cancel</a></h3>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-12">
            {{ bf4.render_form(form, action=url_for('bp_notes.edit', note_id=note.id), horizontal_columns=('lg', 2, 5), form_type='horizontal', button_map={'submit': 'success'}) }}
        </div>
    </div>
{% endblock %}
