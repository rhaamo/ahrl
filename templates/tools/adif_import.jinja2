{% extends "layout.jinja2" %}
{% import "bootstrap/wtf.html" as wtf %}

{% block content %}
    <div class="row">
        <div class="col-lg-6">
            <h4>ADIF Import</h4>
            <form action="{{ url_for('bp_tools.adif_import_file') }}" method="POST" class="form-horizontal" enctype="multipart/form-data">
                {{ form.hidden_tag() }}
                {{ wtf.form_errors(form, hiddens=True) }}
                {{ wtf.form_field(form.adif_file, 'horizontal', accept='.adi, .adif') }}
                {{ wtf.form_field(form.submit, button_map={'submit': 'success'}) }}
            </form>
        </div>
    </div>
{% endblock %}